{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true
  },
  "include": ["src/index.ts", "src/core/**/*.ts"],
  "exclude": ["src/**/*.test.ts", "src/App.tsx", "src/assets", "tests", "node_modules", "dist"]
}